doctype html
html.html-devise lang="pt-BR"
  head
    meta charset="utf-8"
    meta name="keywords" content=""
    meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"
    meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1"

    title= "Target 3.0"

    = stylesheet_link_tag "admin/application", media: "all"
    = javascript_include_tag "admin/application"

    = csrf_meta_tags
    /[if lt IE 9]
      = javascript_include_tag 'html5shiv-printshiv'

  body
    section#content.wrapper-md.animated.fadeInUp
      .container.aside-xl
        .user-img.block = image_tag 'user_icon.png'
        section.m-b-md
          = yield
          hr
        .logo-image.text-center.m-b-md.block = image_tag 'logo_white.png'
        .corp-info
          .corp-email.col-md-12
            span = icon('fas', 'envelope')
            = mail_to 'contato@blockage.com', 'contato@blockage.com'

          .corp-phone.col-md-12
            span = icon('fas', 'phone')  
            = link_to '(79) 3217-2727', "tel:(79)3217-2727"

          .corp-site.col-md-12
            span = icon('fas', 'globe-americas')
            = link_to'www.blockage.com', 'https://www.blockage.com', target: "_blank"

          .corp-social.col-md-12
            = link_to 'https://www.instagram.com/blockage', target: "_blank" do
              span = icon('fab', 'instagram')

            = link_to 'https://www.facebook.com/blockage', target: "_blank" do
              span = icon('fab', 'facebook-square')

            = link_to 'https://goo.gl/maps/Xo5w368XwAyrWmEc8', target: "_blank" do
              span = icon('fas', 'map-marker-alt')
          
